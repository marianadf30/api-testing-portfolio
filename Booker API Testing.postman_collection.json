				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							" var response = pm.response.json();\r",
							"\r",
							"pm.test(\"Check bookingId\", function () {\r",
							"   var bookingId=response.bookingid;\r",
							"    pm.environment.set(\"bookingId_e\",bookingId);\r",
							"    pm.expect(bookingId).to.not.be.null;\r",
							"});\r",
							"\r",
							"pm.test(\"Check booking firstname\", function () {\r",
							"   \r",
							"    var firstname=response.booking.firstname;\r",
							"    pm.environment.set(\"firstname_e\",firstname);\r",
							"    pm.expect(firstname).to.not.be.empty;\r",
							"});\r",
							"\r",
							"pm.test(\"Check booking lastname\", function () {\r",
							"   \r",
							"    var lastname=response.booking.lastname;\r",
							"    pm.environment.set(\"lastname_e\",lastname);\r",
							"    pm.expect(lastname).to.not.be.empty;\r",
							"});\r",
							"\r",
							"pm.test(\"Check booking price\", function () {\r",
							"   \r",
							"    var price=response.booking.totalprice;\r",
							"    pm.environment.set(\"price_e\",price);\r",
							"    pm.expect(price).to.not.be.null;\r",
							"});\r",
							"\r",
							"pm.test(\"Check booking additionalneeds\", function () {\r",
							"   \r",
							"    var additionalneeds=response.booking.additionalneeds;\r",
							"    pm.environment.set(\"additionalneeds_e\",additionalneeds);\r",
							"    pm.expect(additionalneeds).to.not.be.empty;\r",
							"});\r",
							"\r",
							"pm.test(\"Check booking depositpaid\", function () {\r",
							"   \r",
							"    var depositpaid=response.booking.depositpaid;\r",
							"    pm.environment.set(\"depositpaid_e\",depositpaid);\r",
							"    pm.expect(depositpaid).to.be.a(\"boolean\");\r",
							"});"
